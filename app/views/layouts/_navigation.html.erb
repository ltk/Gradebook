<%= link_to "Gradebook", root_path, :class => 'brand' %>
<% if current_user %>
  <p class="navbar-text pull-right"><%= link_to 'Your Account', edit_user_path(current_user) %> | <%= link_to 'Logout', logout_path, :method => :delete %></p>
<% else %>
  <p class="navbar-text pull-right"><%= link_to 'Login', login_path %></p>
<% end %>

<% if current_user %>
<ul class="nav">
  <li class="<%= 'active' if params[:controller] == 'dashboard' || params[:controller] == 'admin_dashboard' %>"><%= link_to "Dashboard", dashboard_path %></li>
  <% if current_user.is_admin? %>
  <li class="<%= 'active' if params[:controller] == 'users' %>"><%= link_to 'Users', users_path %></li>
  <% end %>
  <li class="<%= 'active' if params[:controller] == 'courses' %>"><%= link_to 'Courses', courses_path %></li>
  <% if current_user.is_admin? %>
  <li class="<%= 'active' if params[:controller] == 'semesters' %>"><%= link_to 'Semesters', semesters_path %></li>
  <% end %>
</ul>
<% end %>