<% show_types_select = false unless defined? show_types_select %>
<%= simple_form_for(@user, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if current_user.is_admin? && show_types_select %><%= f.input :type, :collection => User.child_classes %><% end %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
