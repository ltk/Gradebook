<% courses.each do |semester, courses| %>
  <div class="well">
    <% if show_semester_info %>
    <h3><%= semester.name %></h3>
    <% end %>
    <ul>
    <% courses.each do |course| %>
      <%= render 'course', :course => course, :semester => semester %>      
    <% end %>
    </ul> 
  </div>
<% end %>
