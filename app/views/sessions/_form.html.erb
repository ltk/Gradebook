<%= simple_form_for(:user, :url => '/sessions', :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Login to Gradebook', :class => 'btn btn-large btn-primary' %>
  </div>
<% end %>