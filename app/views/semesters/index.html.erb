<h1>Listing Semesters</h1>
<%= will_paginate @semesters %>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Courses</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @semesters.each do |semester| %>
  <tr>
    <td><%= semester.name %></td>
    <td><%= pluralize(semester.courses_count, '') %> <%= link_to "(View #{pluralize( semester.courses_count, "Course")})", semester_courses_path(semester) if semester.courses_count %></td>
    <td><%= semester.start_date %></td>
    <td><%= semester.end_date %></td>
    <td><%= link_to 'Show', semester %></td>
    <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
    <td><%= link_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @semesters %>

<br />

<%= link_to 'New Semester', new_semester_path %>
