<h2>Enrolled Students</h2>
<h4><%= pluralize(course.enrollments.size, "Student") %></h4>
<%= simple_form_for(course) do |f| %>
  <%= f.error_notification %>

  <table class="table">
    <tr>
      <th>Student</th>
      <th>Grade</th>
      <th></th>
    </tr>
  <%= f.simple_fields_for :enrollments do |e| %>
      <tr>
        <td><%= e.object.user.nil? ? 'New Student' : e.object.user.full_name %></td>
        <td><%= grade_selector(e, false) %></td>
        <td><%= link_to "Remove from Course", '#', class: "remove_fields btn btn-danger btn-small" %><%= e.input :_destroy, :as => :hidden %></td>
      </tr>
  <% end %>
      <tr><td colspan='3'><%= link_to_add_fields "Add a Student to this Course", f, :enrollments %></td></tr>
  </table>
  <div class="form-actions">
    <%= f.button :submit, "Save Changes", :class => 'btn-info' %>
    <%= link_to "Discard Changes", course, :class => 'btn' %>
  </div>
<% end %>